{
  "name": "ChatGPT Prompt Injector",
  "description": "Automatically injects brand-specific preset instructions into ChatGPT prompts.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*","<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*","<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
